<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<message-bundle>com.don.erp.Messages</message-bundle>

		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>

	<converter>
        <converter-for-class>br.com.don.erp.model.Entregador</converter-for-class>
        <converter-class>br.com.don.erp.converter.EntregadorConverter</converter-class>
    </converter>

	<converter>
        <converter-for-class>br.com.don.erp.model.Colaborador</converter-for-class>
        <converter-class>br.com.don.erp.converter.ColaboradorConverter</converter-class>
    </converter>

	<converter>
		<converter-for-class>java.math.BigDecimal</converter-for-class>
		<converter-class>br.com.don.erp.converter.DinheiroConverter</converter-class>
	</converter>

</faces-config>